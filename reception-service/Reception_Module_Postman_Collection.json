							"raw": "{\n  \"customerName\": \"Ridmi\",\n  \"services\": [\"Hair cut\", \"Hair Color\"],\n  \"date\": \"2025-12-16\",\n  \"time\": \"4:00 PM\",\n  \"staff\": \"Thinuri\",\n  \"payment\": \"2000\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/bookings",
