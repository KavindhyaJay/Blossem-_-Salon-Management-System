					}
				},
				{
					"name": "Update Booking",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"customerName\": \"Ridmi\",\n  \"services\": [\"Hair cut\", \"Hair Color\"],\n  \"date\": \"2025-12-16\",\n  \"time\": \"5:00 PM\",\n  \"staff\": \"Thinuri\",\n  \"payment\": \"2000\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/bookings/{{bookingId}}",
